<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.crianbra.selectorfechahora.MainActivity">



    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btn_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="174dp"
            android:layout_alignTop="@+id/txt_fecha"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="251dp"
            android:layout_alignTop="@+id/txt_hora"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_fecha"
            android:layout_width="144dp"
            android:layout_height="43dp"
            android:background="?attr/colorButtonNormal"
            android:text=""
            tools:layout_editor_absoluteX="182dp"
            tools:layout_editor_absoluteY="174dp"
            android:layout_alignBottom="@+id/txt_hora"
            android:layout_toRightOf="@+id/btn_fecha"
            android:layout_toEndOf="@+id/btn_fecha"
            android:layout_marginLeft="54dp"
            android:layout_marginStart="54dp"
            android:layout_marginBottom="77dp" />

        <TextView
            android:id="@+id/txt_hora"
            android:layout_width="144dp"
            android:layout_height="44dp"
            android:background="?attr/colorButtonNormal"
            android:text=""
            tools:layout_editor_absoluteX="182dp"
            tools:layout_editor_absoluteY="251dp"
            android:layout_marginBottom="159dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/txt_fecha"
            android:layout_alignStart="@+id/txt_fecha" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
